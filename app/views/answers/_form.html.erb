<%= form_with(model: answer) do |form| %>
  <% if answer.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(answer.errors.count, "error") %> prohibited this answer from being saved:</h2>

      <ul>
        <% answer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h3>Your response</h3>
  <div>
    <label for="proposed_fee">Proposed fee</label>
    <input type="number" name="proposed_fee" id="proposed_fee" inputmode="decimal" autofocus="true" required="true">
  </div>

  <p>Your answer will not be visible to the person who asked the question until they have paid your requested fee.<p>

  <div>
    <%= form.label :body %>
    <%= form.textarea :body, required: true %>
  </div>

  <div>
    <%= form.hidden_field :question_id, value: question.id %>
  </div>

  <div class="form-actions">
    <%= form.submit %>
    <%= link_to "Cancel", home_question_path(@question), class: "button cancel" %>
  </div>
<% end %>
