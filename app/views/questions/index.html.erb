<% if notice.present? %>
  <p class="notice"><%= notice %></p>
<% end %>

<% content_for :title, "Your Questions" %>

<h1>Your Questions</h1>

<% if user_signed_in? %>
<p>
  <%= link_to "New Question…", new_question_path, class: "button" %>
</p>

<% end %>
<ul id="questions">
  <% @questions.each do |question| %>
    <%= render question %>
  <% end %>
</ul>

<p class="navigation">
  <%= link_to "← Return to home page", root_path %>
</p>
